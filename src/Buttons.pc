<div export component as="Section" className:column="column" className:danger="danger" className:success="success" className:primary="primary" className:dark="dark">
    <style>
        display: flex;
        margin-bottom: 10px;
        grid-column-gap: 20px;
        &.column {
            flex-direction: column;
        }
        &.danger {
            @include bg;
            background: #E44258;  
        }
        &.success {
            @include bg;
            background: #00CA72; 
        }
        &.dark {
            @include bg;
            background: #323338; 
        }
        &.primary {
            @include bg;
            background: #0085FF; 
        }
    </style>
    {children}
</div>

<!--
