    @mixin bg {
        width: 100%;
        border-radius: 10px;
    }

    .bg {
        &-danger {
            @include bg;
            background: #E44258;  
        }
        &-success {
            @include bg;
            background: #00CA72; 
        }
        &-dark {
            @include bg;
            background: #323338; 
        }
        &-primary {
            @include bg;
            background: #0085FF; 
        }
    }
</style>


<!--
  @frame { visible: false }
-->
<button export component as="Button" className:primary="primary" className:danger="danger" className:success="success" className:large="large" className:medium="medium" className:small="small" className:active="active" className:hollow="hollow" className:borderless="borderless">
    <style>
        border-radius: 4px;
        font-family: 'Roboto';
        font-style: normal;
        font-weight: normal;
        line-height: 24px;
        border: none;
        display: block;
        margin: 10px auto;
        background: #E6E9EF;
        color: #676879;
        &.hollow {
            background: none;
            border: 1px solid #C5C7D0;
            &.active {
                background: #E6E9EF;
                color: #323338
            }
        }
        &.primary {
            background: #0085FF;
            color: #FFFFFF;
            &.active {
                background: #0071D9;
                color: #FFFFFF;
            }
            &.hollow {
                background: none;
                color: #0085FF;
                border: 1px solid #0085FF;
                &.active {
                    background: #DFF0FF;
                }
            }
        }
        &.danger {
            background: #E44258;
            color: #FFFFFF;
            &.active {
                background: #B63546;
                color: #FFFFFF;
            }
            &.hollow {
                background: none;
                color: #E44258;
                border: 1px solid #E44258;
                &.active {
                    background: #F9DADE;
                }
            }
        }
        &.success {
            background: #00CA72;
            color: #FFFFFF;
            &.active {
                background: #00A25B;
            }
            &.hollow {
                background: none;
                color: #00CA72;
                border: 1px solid #00CA72;
                &.active {
                    background: #CCF4E3;
                }
            }
        }
        &.large {
            padding: 12px 24px;
            font-size: 16px;
        }
        &.medium {
            padding: 8px 16px;
            font-size: 16px;
        }
        &.small {
            padding: 5px 8px;
        }
        &.borderless {
            border: none;
        }
    </style>
    {children}
</button>



